{
  "components": {
    "responses": {
      "Error": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        },
        "description": "error"
      }
    },
    "schemas": {
      "AccessMode": {
        "enum": [
          "RW",
          "R",
          "O"
        ],
        "type": "string"
      },
      "Error": {
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ErrorCode": {
        "enum": [
          "UNAUTHENTICATED",
          "UNAUTHORIZED",
          "INTERNAL",
          "UNAVAILABLE"
        ],
        "type": "string"
      },
      "List": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ListShort"
          },
          {
            "properties": {
              "items": {
                "items": {
                  "$ref": "#/components/schemas/ListItem"
                },
                "type": "array"
              }
            }
          }
        ]
      },
      "ListItem": {
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        }
      },
      "ListShort": {
        "properties": {
          "accepted": {
            "type": "boolean"
          },
          "access": {
            "$ref": "#/components/schemas/AccessMode"
          },
          "id": {
            "type": "string"
          },
          "inviter": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "ListUser": {
        "properties": {
          "accepted": {
            "type": "boolean"
          },
          "access_mode": {
            "$ref": "#/components/schemas/AccessMode"
          },
          "me": {
            "type": "boolean"
          },
          "user_name": {
            "type": "string"
          }
        }
      },
      "User": {
        "properties": {
          "avatar_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  },
  "info": {
    "title": "Todo list",
    "version": "1.0.0"
  },
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "operationId": "file-index",
        "responses": {
          "200": {
            "description": "HTML page static content"
          }
        },
        "x-yc-apigateway-integration": {
          "bucket": "${STORAGE_BUCKET}",
          "object": "index.html",
          "presigned_redirect": false,
          "service_account_id": "${GATEWAY_SA_ID}",
          "type": "object_storage"
        }
      }
    },
    "/api/me": {
      "get": {
        "operationId": "user_info",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            },
            "description": "User information"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/api/todo-lists": {
      "get": {
        "operationId": "list_lists",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/ListShort"
                  },
                  "type": "array"
                }
              }
            },
            "description": "User todo lists"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      },
      "post": {
        "operationId": "create_list",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "name"
                ],
                "type": "object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id"
                  ],
                  "type": "object"
                }
              }
            },
            "description": "Create new list"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/api/todo-lists/{list_id}/accept_invitation": {
      "post": {
        "operationId": "accept_invitation",
        "parameters": [
          {
            "in": "path",
            "name": "list_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "alias": {
                    "type": "string"
                  }
                },
                "required": [
                  "alias"
                ],
                "type": "object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "OK"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/api/todo-lists/{list_id}/inviteUser": {
      "post": {
        "operationId": "invite_user",
        "parameters": [
          {
            "in": "path",
            "name": "list_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "access_mode": {
                    "$ref": "#/components/schemas/AccessMode"
                  },
                  "invitee": {
                    "type": "string"
                  }
                },
                "required": [
                  "invitee",
                  "access_mode"
                ],
                "type": "object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "OK"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/api/todo-lists/{list_id}/items": {
      "post": {
        "operationId": "add_item",
        "parameters": [
          {
            "in": "path",
            "name": "list_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": [
                  "text"
                ],
                "type": "object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "OK"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/api/todo-lists/{list_id}/items/{item_id}/wa": {
      "delete": {
        "operationId": "delete_item",
        "parameters": [
          {
            "in": "path",
            "name": "list_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "item_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "OK"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/api/todo-lists/{list_id}/users": {
      "get": {
        "operationId": "get_list_users",
        "parameters": [
          {
            "in": "path",
            "name": "list_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/ListUser"
                  },
                  "type": "array"
                }
              }
            },
            "description": "Users of list"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/api/todo-lists/{list_id}/users/{user_id}/wa": {
      "delete": {
        "operationId": "revoke_invitation",
        "parameters": [
          {
            "in": "path",
            "name": "list_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "OK"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/api/todo-lists/{list_id}/wa": {
      "delete": {
        "operationId": "delete_list",
        "parameters": [
          {
            "in": "path",
            "name": "list_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "OK"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      },
      "get": {
        "operationId": "get_list",
        "parameters": [
          {
            "in": "path",
            "name": "list_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/List"
                }
              }
            },
            "description": "List information"
          },
          "default": {
            "$ref": "#/components/responses/Error"
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/login": {
      "get": {
        "operationId": "page_login",
        "responses": {
          "302": {
            "description": "Login redirect page",
            "headers": {
              "Location": {
                "description": "Redirect location",
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/receive-token": {
      "get": {
        "operationId": "page_receive_token",
        "parameters": [
          {
            "in": "query",
            "name": "state",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "code",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "Login redirect page",
            "headers": {
              "Location": {
                "description": "Redirect location",
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "x-yc-apigateway-integration": {
          "function_id": "${WEB_FUNCTION_ID}",
          "service_account": "${GATEWAY_SA_ID}",
          "tag": "$latest",
          "type": "cloud_functions"
        }
      }
    },
    "/{file+}": {
      "get": {
        "operationId": "file-static",
        "parameters": [
          {
            "explode": false,
            "in": "path",
            "name": "file",
            "required": true,
            "schema": {
              "type": "string"
            },
            "style": "simple"
          }
        ],
        "responses": {
          "200": {
            "description": "static file"
          }
        },
        "x-yc-apigateway-integration": {
          "bucket": "${STORAGE_BUCKET}",
          "object": "{file}",
          "presigned_redirect": false,
          "service_account_id": "${GATEWAY_SA_ID}",
          "type": "object_storage"
        }
      }
    }
  }
}
